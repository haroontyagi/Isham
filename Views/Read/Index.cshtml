@{
    ViewData["Title"] = "Read Mail";
}

<div class="content-header">
    <h1>Read Mail</h1>
</div>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Subject: Meeting Tomorrow</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-default btn-sm"><i class="fa fa-reply"></i></button>
                <button class="btn btn-default btn-sm"><i class="fa fa-trash"></i></button>
            </div>
        </div>
        <div class="box-body">
            <p><strong>From:</strong> John Doe &lt;john@example.com&gt;</p>
            <p><strong>Date:</strong> 2025-08-09 10:30 AM</p>
            <hr>
            <p>Hello,</p>
            <p>This is a reminder for our meeting tomorrow at 10:00 AM.</p>
            <p>Thanks,<br>John</p>
        </div>
    </div>
</section>
