@model Invoicebook.Models.Client
@{
    ViewData["Title"] = "Edit Client";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Client</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- General Info -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">General Info</div>
            <div class="card-body row">
                <div class="form-group col-md-4">
                    <label>Client Number</label>
                    <input asp-for="Number" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Joined Date</label>
                    <input asp-for="JoinedDate" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Website</label>
                    <input asp-for="Website" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">Contact Info</div>
            <div class="card-body row">
                <div class="form-group col-md-4">
                    <label>First Name</label>
                    <input asp-for="ContactFirstName" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Last Name</label>
                    <input asp-for="ContactLastName" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Contact Email</label>
                    <input asp-for="ContactEmail" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Contact Phone</label>
                    <input asp-for="ContactPhone" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Financial Info -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">Financial Info</div>
            <div class="card-body row">
                <div class="form-group col-md-4">
                    <label>Balance</label>
                    <input asp-for="Balance" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Paid To Date</label>
                    <input asp-for="paid_to_date" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Currency</label>
                    <input asp-for="Currency" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Invoice Payment Terms</label>
                    <input asp-for="InvoicePaymentTerms" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Quote Valid Until</label>
                    <input asp-for="QuoteValidUntil" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Task Rate</label>
                    <input asp-for="TaskRate" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Billing Address -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">Billing Address</div>
            <div class="card-body row">
                <div class="form-group col-md-4">
                    <label>Apt/Suite</label>
                    <input asp-for="BillingAptSuite" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Street</label>
                    <input asp-for="BillingStreet" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>City</label>
                    <input asp-for="BillingCity" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>State/Province</label>
                    <input asp-for="BillingStateProvince" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Postal Code</label>
                    <input asp-for="BillingPostalCode" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Country</label>
                    <input asp-for="BillingCountry" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Shipping Address -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">Shipping Address</div>
            <div class="card-body row">
                <div class="form-group col-md-4">
                    <label>Apt/Suite</label>
                    <input asp-for="ShippingAptSuite" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Street</label>
                    <input asp-for="ShippingStreet" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>City</label>
                    <input asp-for="ShippingCity" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>State/Province</label>
                    <input asp-for="ShippingStateProvince" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Postal Code</label>
                    <input asp-for="ShippingPostalCode" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Country</label>
                    <input asp-for="ShippingCountry" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Extra Info -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">Extra Info</div>
            <div class="card-body row">
                <div class="form-group col-md-4">
                    <label>ID Number</label>
                    <input asp-for="IdNumber" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>VAT Number</label>
                    <input asp-for="VatNumber" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Size</label>
                    <input asp-for="Size" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label>Industry</label>
                    <input asp-for="Industry" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label>Public Notes</label>
                    <textarea asp-for="PublicNotes" class="form-control"></textarea>
                </div>
                <div class="form-group col-md-6">
                    <label>Private Notes</label>
                    <textarea asp-for="PrivateNotes" class="form-control"></textarea>
                </div>
            </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
