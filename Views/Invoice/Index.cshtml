@*
    Invoice Page
*@
@{
    ViewData["Title"] = "Invoice";
}

<!-- Page Title -->
<div class="d-flex justify-content-between align-items-center mb-4 p-4">
    <h1 class="fw-bold mb-0">Invoice #INV-2025-001</h1>
    <button class="btn btn-primary btn-sm" onclick="window.print()">
        <i class="bi bi-printer"></i> Print Invoice
    </button>
</div>

<!-- Invoice Card -->
<div class="card shadow-lg border-0 px-4">
    <div class="card-body p-4">

        <!-- Company & Client Info -->
        <div class="row mb-4">
            <div class="col-md-6">
                <h4 class="fw-bold">Your Company</h4>
                <p>
                    123 Business Street<br>
                    City, Country<br>
                    Email: company@email.com<br>
                    Phone: +91 98765 43210
                </p>
            </div>
            <div class="col-md-6 text-end">
                <h4 class="fw-bold">Billed To:</h4>
                <p>
                    John Doe<br>
                    456 Client Road<br>
                    City, Country<br>
                    Email: client@email.com<br>
                    Phone: +91 99999 88888
                </p>
            </div>
        </div>

        <!-- Invoice Details -->
        <div class="row mb-4">
            <div class="col-md-4">
                <strong>Invoice Date:</strong> 09 Aug 2025
            </div>
            <div class="col-md-4">
                <strong>Due Date:</strong> 16 Aug 2025
            </div>
            <div class="col-md-4">
                <strong>Status:</strong>
                <span class="badge bg-success">Paid</span>
            </div>
        </div>

        <!-- Items Table -->
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Item Description</th>
                        <th class="text-end">Quantity</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Website Development</td>
                        <td class="text-end">1</td>
                        <td class="text-end">₹50,000</td>
                        <td class="text-end">₹50,000</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Hosting & Maintenance</td>
                        <td class="text-end">1</td>
                        <td class="text-end">₹5,000</td>
                        <td class="text-end">₹5,000</td>
                    </tr>
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="4" class="text-end">Subtotal</th>
                        <th class="text-end">₹55,000</th>
                    </tr>
                    <tr>
                        <th colspan="4" class="text-end">Tax (18%)</th>
                        <th class="text-end">₹9,900</th>
                    </tr>
                    <tr>
                        <th colspan="4" class="text-end">Total</th>
                        <th class="text-end fw-bold">₹64,900</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- Notes -->
        <div class="mt-4">
            <strong>Notes:</strong>
            <p>
                Thank you for your business! Payment has been received in full.
            </p>
        </div>
    </div>
</div>

<!-- Optional Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
